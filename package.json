{
  "name": "@forabi/class-sanitizer",
  "private": true,
  "version": "0.1.0",
  "description": "Class-based sanitation in Typescript using decorators",
  "license": "Apache-2.0",
  "readmeFilename": "README.md",
  "author": {
    "name": "Umed Khudoiberdiev",
    "email": "pleerock.me@gmail.com"
  },
  "contributors": [
    "Muhammad Fawwaz Orabi <mfawwaz93@gmail.com>"
  ],
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pleerock/class-sanitizer.git"
  },
  "bugs": {
    "url": "https://github.com/pleerock/class-sanitizer/issues"
  },
  "tags": [
    "sanitizer",
    "sanitation",
    "typescript",
    "typescript-sanitizer"
  ],
  "dependencies": {
    "validator": "^9.2.0"
  },
  "lint-staged": {
    "**/*.md": [
      "prettier --write",
      "git add"
    ],
    "**/*.ts{x,}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test",
      "pre-push": "yarn test",
      "post-merge": "yarnhook",
      "post-checkout": "yarnhook",
      "post-rewrite": "yarnhook"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "semi": true,
    "tabWidth": 2
  },
  "devDependencies": {
    "@types/jest": "^22.0.1",
    "@types/node": "^7.0.5",
    "@types/validator": "^6.3.0",
    "del-cli": "^1.1.0",
    "expect-more-jest": "^1.0.1",
    "husky": "^0.15.0-rc.3",
    "jest": "^22.1.4",
    "lint-staged": "^6.0.1",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.10.2",
    "reflect-metadata": "^0.1.12",
    "ts-jest": "^22.0.1",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.6.0",
    "tslint-stylish": "^2.1.0-beta",
    "typescript": "^2.6.2",
    "yarnhook": "^0.1.1"
  },
  "scripts": {
    "clean": "del-cli build",
    "pretest": "run-p clean",
    "lint": "tslint --exclude 'node_modules' --project tsconfig.json",
    "jest": "jest",
    "test": "run-p --aggregate-output -l lint jest",
    "dev": "jest --watch",
    "build/ts": "tsc",
    "build": "run-s clean build/ts",
    "lint-staged": "lint-staged"
  }
}
