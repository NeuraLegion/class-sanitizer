{
  "name": "@neuralegion/class-sanitizer",
  "private": false,
  "version": "0.0.0",
  "description": "Class-based sanitization in TypeScript using decorators",
  "license": "Apache-2.0",
  "readmeFilename": "README.md",
  "author": {
    "name": "Artem Derevnjuk",
    "email": "artem.derevnjuk@neuralegion.com"
  },
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "lint-staged": {
