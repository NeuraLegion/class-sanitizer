{
  "name": "@neuralegion/class-sanitizer",
  "private": false,
  "version": "0.2.6",
  "description": "Class-based sanitization in TypeScript using decorators",
  "license": "Apache-2.0",
  "readmeFilename": "README.md",
  "author": {
    "name": "Artem Derevnjuk",
    "email": "artem.derevnjuk@neuralegion.com"
  },
  "main": "./dist/index.js",
  "jest": {
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "keywords": [
    "sanitize",
    "sanitization",
    "xss",
    "sanitizer",
    "purify",
    "secure",
    "security"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/NeuraLegion/class-sanitizer.git"
  },
  "bugs": {
    "url": "https://github.com/NeuraLegion/class-sanitizer/issues"
  },
  "homepage": "https://github.com/NeuraLegion/class-sanitizer#readme",
  "tags": [
    "sanitizer",
    "sanitization",
    "typescript",
    "typescript-sanitizer"
  ],
  "dependencies": {
    "validator": "^9.2.0"
  },
  "devDependencies": {
    "jest": "^24.9.0",
    "@types/jest": "^22.0.1",
    "@types/node": "^7.0.5",
    "@types/validator": "^6.3.0",
    "babel-eslint": "^8.0.2",
    "del-cli": "^1.1.0",
    "expect-more-jest": "^1.0.1",
    "lodash": "^4.17.4",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.10.2",
    "reflect-metadata": "^0.1.12",
    "ts-jest": "^24.0.2",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^2.6.2"
  },
  "scripts": {
    "clean": "del-cli dist",
    "pretest": "run-p clean",
    "lint-ts": "tslint --exclude 'node_modules' --project tsconfig.json",
    "jest": "jest",
    "check-ts": "tsc --noEmit",
    "test": "run-p --aggregate-output check-ts lint-ts jest",
    "dev": "jest --watch",
    "build-ts": "tsc",
    "build": "run-s clean build-ts"
  }
}
