{
    "version": "1.8.0",
    "compilerOptions": {
        "outDir": "build/compiled",
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "declaration": true
    },
    "exclude": [
        "build",
        "node_modules",
        "typings/browser.d.ts",
        "typings/browser"
    ]
}
